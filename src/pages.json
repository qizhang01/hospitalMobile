{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		// 主页
		{
			"path": "pages/mainPageTab/index",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarBackgroundColor": "#fff",
				"navigationBarTextStyle": "black",
				"backgroundColorTop": "#F7F7F7",
				"backgroundColorBottom": "#F7F7F7",
				"onReachBottomDistance": 50,
				"navigationStyle": "custom",
				"app-plus": {
					"titleNView": false,
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},
		//患者信息

		{
			"path": "pages/patientInfoTab/list",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "患者信息",
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},

		// 公告
		{
			"path": "pages/mainPageTab/notice/notice",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "公告",
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},

		// 搜索
		{
			"path": "pages/mainPageTab/search/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		// 登录
		{
			"path": "pages/login/login",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "登录",
				"app-plus": {
					"bounce": "none",
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},

		// 体温表
		{
			"path": "pages/temperature/index",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "体温单",
				"navigationBarTextStyle": "black",
				"app-plus": {
					//          "titleNView": false,
					//          "softinputNavBar": "none",
					// 禁用原生导航栏
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},

		//患者信息
		{
			"path": "pages/document/index",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "患者信息",
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},
		// 医嘱管理
		{
			"path": "pages/doctorTipsTab/index",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "医嘱管理",
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#fa436a",
						"style": "default"
					}
				}
			}
		},
		// 我的
		{
			"path": "pages/profileTab/profile",
			"style": {
				"navigationBarTitleText": "我的",
				// #ifdef MP
				"navigationStyle": "custom",
				// #endif
				"app-plus": {
					"bounce": "none",
					"titleNView": {
						"type": "transparent",
						"buttons": [
							{
								"fontSrc": "/static/iconfont.ttf",
								"text": "\ue658",
								"fontSize": "28",
								"color": "#303133",
								"width": "42px",
								"background": "rgba(0,0,0,0)"
							},
							{
								"fontSrc": "/static/iconfont.ttf",
								"text": "\ue618",
								"fontSize": "26",
								"color": "#303133",
								"background": "rgba(0,0,0,0)",
								"redDot": false
							}
						]
					}
				}
			}
		}
	],
	"subPackages": [
		// 设置
		{
			"root": "pages/set",
			"pages": [
				// 设置
				{
					"path": "set",
					"style": {
						"navigationBarTitleText": "设置"
					}
				},
				// 反馈列表
				{
					"path": "feedback/list",
					"style": {
						"enablePullDownRefresh": true,
						"navigationBarTitleText": "意见反馈",
						"app-plus": {
							"pullToRefresh": {
								"support": true,
								"color": "#fa436a",
								"style": "default"
							}
						}
					}
				},
				// 关于
				{
					"path": "about/about",
					"style": {
						"navigationBarTitleText": ""
					}
				}
			]
		},
		// 登录功能
		{
			"root": "pages/login",
			"pages": [
				// 登录
				{
					"path": "login",
					"style": {
						"navigationBarTitleText": "登录",
						"navigationStyle": "custom",
						"app-plus": {
							"titleNView": false,
							"animationType": "slide-in-bottom"
						}
					}
				},
				// 修改密码
				{
					"path": "password",
					"style": {
						"navigationBarTitleText": "忘记密码",
						"navigationStyle": "custom",
						"app-plus": {
							"titleNView": false,
							"animationType": "slide-in-bottom"
						}
					}
				}
			]
		},

		// 我的
		{
			"root": "pages/user",
			"pages": [
				// 用户资料
				{
					"path": "userinfo/userinfo",
					"style": {
						"navigationBarTitleText": "修改资料"
					}
				},

				// 我的账户
				{
					"path": "account/account",
					"style": {
						"navigationBarTitleText": "我的账户"
					}
				},
				{
					"path": "account/recharge",
						"style": {
							"navigationBarTitleText": "详细信息"
						}
				}
			]
		}

	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "文书录入系统",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#f8f8f8"
	},
	"tabBar": {
		"color": "#C0C4CC",
		"selectedColor": "#fa436a",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/mainPageTab/index",
				"iconPath": "static/tab-home.png",
				"selectedIconPath": "static/tab-home-rf.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/patientInfoTab/list",
				"iconPath": "static/tab-cate.png",
				"selectedIconPath": "static/tab-cate-rf.png",
				"text": "患者信息"
			},
			{
				"pagePath": "pages/login/login",
				"iconPath": "static/tab-notify.png",
				"selectedIconPath": "static/tab-notify-rf.png",
				"text": "登录"
			},
			{
				"pagePath": "pages/doctorTipsTab/index",
				"iconPath": "static/tab-cart.png",
				"selectedIconPath": "static/tab-cart-rf.png",
				"text": "医嘱管理"
			},
			{
				"pagePath": "pages/profileTab/profile",
				"iconPath": "static/tab-my.png",
				"selectedIconPath": "static/tab-my-rf.png",
				"text": "我的"
			}
		]
	},
	"condition" : { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "", //模式名称
				"path": "", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
